doctype html
html
  head
    title 予定調整くん
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="stylesheets/style.css")
  body
    header.cd-header
      .header-wrapper
        .logo-wrap
          a.hover-target(href="/")
            span 予定
            | 調整くん
        .nav-but-wrap
          .menu-icon.hover-target
            span(class='menu-icon__line menu-icon__line-left')
            span(class='menu-icon__line')
            span(class='menu-icon__line menu-icon__line-right')
      .nav
        div(class='nav__content')
          ul(class='nav__list')
            if user
              li(class='nav__list-item active-nav')
                a.hover-target(href="/logout") #{user.username} をログアウト
            else
              li(class='nav__list-item active-nav')
                a.hover-target(href="/login") ログイン  
    div.container
      block content
    script(src="/javascripts/bundle.js")
